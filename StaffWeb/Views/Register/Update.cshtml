@model Model.StaffModel
@{
    Layout = "_Layout";
    var title = "Update";
    ViewData["Title"] = "Update";
}
<style>
    .input-validation-error {
        border-color: red;
    }
</style>

<h2>@title</h2>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-action="Update" runat="server" class="m-1 p-1" method="post">
    <div class="form-group">
        <label asp-for="Email" runat="server"></label>
        <input asp-for="Email" class="form-control" placeholder="Email" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FullName" runat="Server"></label>
        <input asp-for="FullName" type="text" class="form-control" placeholder="FullName" required />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName" runat="Server"></label>
        <input asp-for="LastName" type="text" class="form-control" placeholder="LastName" required />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" runat="Server"></label>
        <input asp-for="Address" type="text" class="form-control" placeholder="Address" required />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
   <button type="submit" class="btn btn-primary" runat="Server">Update</button>
    @*<button type="button"  id="btnUpdate" onclick="Update;">Update</button>*@
</form>




<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
